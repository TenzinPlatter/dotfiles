// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      // "j k": "vim::NormalBefore"
    }
  },
  {
    "context": "((vim_mode == normal || vim_mode == visual) || vim_mode == operator)",
    "bindings": {
      "ctrl-k": "editor::MoveLineUp"
    }
  },
  {
    "context": "((vim_mode == normal || vim_mode == visual) || vim_mode == operator)",
    "bindings": {
      "ctrl-j": "editor::MoveLineDown"
    }
  },
  {
    "context": "Workspace && vim_mode == normal",
    "bindings": {
      "space w": "workspace::SaveWithoutFormat"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "space =": "editor::Format"
    }
  },
  {
    "context": "((os != macos && Editor) && edit_prediction_conflict)",
    "bindings": {
      "ctrl-l": "editor::AcceptEditPrediction"
    }
  },
  {
    "context": "(VimControl && !menu)",
    "bindings": {
      "z i": "editor::ToggleFold"
    }
  },
  {
    "context": "((VimControl && !menu) || (!Editor))",
    "bindings": {
      "alt-k": "workspace::ActivatePaneUp",
      "alt-j": "workspace::ActivatePaneDown",
      "alt-h": "workspace::ActivatePaneLeft",
      "alt-l": "workspace::ActivatePaneRight"
    }
  },
  {
    "context": "(((Editor && in_snippet) && has_next_tabstop) && !showing_completions)",
    "bindings": {
      "ctrl-l": "editor::NextSnippetTabstop"
    }
  },
  {
    "context": "(((Editor && in_snippet) && has_previous_tabstop) && !showing_completions)",
    "bindings": {
      "ctrl-h": "editor::PreviousSnippetTabstop"
    }
  }
]
