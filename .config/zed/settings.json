      "enable_thinking": false
    },
    "favorite_models": [],
    "model_parameters": []
  },
  "ui_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "ssh_connections": [
    {
      "host": "gr-clanker",
      "username": "gr",
      "args": [],
      "projects": [
        {
          "paths": [
            "/home/gr/Repositories/gama"
          ]
        }
